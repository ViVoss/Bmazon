<Window x:Class="Bmazon.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Bmazon"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1200" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="75"/>
        </Grid.RowDefinitions>
        <Frame Grid.Row="0" x:Name="MyFrame" Background="AliceBlue" NavigationUIVisibility="Hidden"/>
        <DockPanel Grid.Row="2">
            <DockPanel.Background>
                <SolidColorBrush Color="DimGray"/>
            </DockPanel.Background>
            <Button Name="Continue_Button" Width="150" Height="40" Content="Continue" FontSize="24" HorizontalAlignment="Right" Margin="5" VerticalAlignment="Center" DockPanel.Dock="Right" Click="Continue_Button_Click" Background="#FFFF00" BorderBrush="#FFFF00" Foreground="#DD000000"/>
            <Button Name="Back_Button" Width="150" Height="40" Content="Back" FontSize="24" HorizontalAlignment="Right" Margin="5" VerticalAlignment="Center" DockPanel.Dock="Right" Click="Back_Button_Click" Background="#FFFF00" BorderBrush="#FFFF00" Foreground="#DD000000"/>
        </DockPanel>
    </Grid>
</Window>
